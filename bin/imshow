#!/usr/bin/env python

import sys, h5py, matplotlib
sys.path.append("lib")
matplotlib.use("Agg")

from os.path import dirname, basename
from multiprocessing import Process
from yafdtd.utils import imshow, batch, order, open, prepare

hdf5 = h5py.File(sys.argv[1],"r")

outdir = dirname(hdf5.filename) + "/charts"
prepare(outdir)

pattern = "%s/%s-%%.%ds.png" % (outdir, hdf5.attrs["name"], order(hdf5["timeline"]))

processes = [Process(target=imshow, args=(t.get("ez"), pattern, basename(t.name))) for t in hdf5["timeline"].values()]

batch(processes, 60)

hdf5.close()

open(outdir)
