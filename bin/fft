#!/usr/bin/env python

import sys, os, matplotlib, pylab, h5py, numpy
sys.path.append("lib")

from fdtd.utils import fft, prepare, open, plot
from os.path import dirname, basename

hdf5 = h5py.File(sys.argv[1], "r")

outdir = dirname(sys.argv[1])+"/fftcharts"
prepare(outdir)

timeline = [hdf5["timeline"][str(t)].get("ex") for t in range(len(hdf5["timeline"]))]

twister = numpy.array(timeline).transpose()

for i in range(len(twister)):
    plot(twister[i], "%s/space-%d.png", (outdir, i))

open(outdir)
