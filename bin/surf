#!/usr/bin/env python

import sys, matplotlib, h5py, os
sys.path.append("lib")
matplotlib.use("Agg")

from multiprocessing import Process
from fdtd.utils import surf, split

hdf5 = h5py.File("result/result.hdf5","r")

processes = [Process(target=surf, args=(t.get("ez"), "result/twod-test-%.3s.png", os.path.basename(t.name))) for t in hdf5["timeline"].values()]

for sub in split(processes, 60):
    for p in sub:
        p.start()
    for p in sub:
        p.join()

hdf5.close()
